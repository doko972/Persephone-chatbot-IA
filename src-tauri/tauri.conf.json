{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Charly",
  "version": "1.1.0",
  "identifier": "fr.ateliernormandduweb.charly",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Assistant de Persephone",
        "width": 420,
        "height": 650,
        "minWidth": 400,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": true,
        "skipTaskbar": true,
        "center": false,
        "shadow": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://friend.ateliernormandduweb.fr; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com data:; img-src 'self' data: https:",
      "capabilities": [
        "default",
        {
          "identifier": "window-permissions",
          "description": "Permissions pour contrôler la fenêtre",
          "windows": ["main"],
          "permissions": [
            "core:window:allow-set-fullscreen",
            "core:window:allow-is-fullscreen",
            "core:window:allow-maximize",
            "core:window:allow-unmaximize",
            "core:window:allow-is-maximized",
            "core:window:allow-minimize",
            "core:window:allow-close",
            "core:window:allow-set-size",
            "core:window:allow-set-position",
            "core:window:allow-set-always-on-top",
            "core:window:allow-show",
            "core:window:allow-hide"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
